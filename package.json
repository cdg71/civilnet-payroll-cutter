{
  "name": "civilnet-payroll-cutter",
  "version": "0.1.0",
  "description": "Ce logiciel en ligne de commande fournit des utilitaires pour le découpage d'un fichier PDF global de payes généré par le logiciel civilnet RH en bulletins de salaires PDF individuels.",
  "author": "Jean-Philippe Bourgeon <jeanphilippe.bourgeon@gmail.com> (https://www.linkedin.com/in/jpbourgeon)",
  "license": "CECILL-C",
  "repository": {
    "type": "git",
    "url": "https://github.com/cdg71/civilnet-payroll-cutter"
  },
  "bin": {
    "cpc": "./src/cut.js",
    "civilnet-payroll-cut": "./src/cut.js",
    "cpd": "./src/dump.js",
    "civilnet-payroll-dump": "./src/dump.js",
    "cpm": "./src/mock.js",
    "civilnet-payroll-mock": "./src/mock.js"
  },
  "scripts": {
    "commit": "commit",
    "cut": "node ./src/cut.js",
    "dump": "node ./src/dump.js",
    "mock": "node ./src/mock.js",
    "lint": "eslint . --cache --fix",
    "release": "standard-version",
    "test": "jest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "CivilNet",
    "Payroll",
    "PDF",
    "node.js"
  ],
  "dependencies": {
    "commander": "^8.2.0",
    "cuid": "^2.1.8",
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2",
    "pdf-lib": "^1.16.0",
    "pdf2json": "^1.2.5",
    "threads": "^1.7.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/prompt-cli": "^13.2.0",
    "babel-eslint": "^10.1.0",
    "concat-stream": "^2.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.1"
  }
}
